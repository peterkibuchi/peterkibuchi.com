{
  "name": "astro-theme-pure",
  "type": "module",
  "version": "4.0.9",
  "scripts": {
    "build": "astro-pure check && astro check && astro build",
    "cache:avatars": "tsx scripts/cacheAvatars.ts",
    "check": "astro check",
    "clean": "rm -rf .astro .vercel dist",
    "dev": "astro dev",
    "dev:check": "astro check --watch & astro dev",
    "format:check": "prettier --check \"**/*.{astro,js,jsx,ts,tsx,md,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{astro,js,jsx,ts,tsx,md,mdx}\" --cache",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "new": "astro-pure new",
    "sync": "astro sync",
    "yijiansilian": "bun lint && bun sync && bun check && bun format"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/vercel": "^9.0.0",
    "@waline/client": "^3.7.1",
    "astro": "^5.15.3",
    "astro-pure": "1.3.6",
    "katex": "^0.16.25",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript-eslint": "^8.48.0"
  }
}
